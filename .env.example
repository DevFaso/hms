# ─── Railway Project (MediHub) ───
RAILWAY_PROJECT_ID=bc9920fa-8753-434c-b812-3fc4b5473542
# Tokens per environment (set these in GitHub Secrets, not here)
# HMS_DEV_TOKEN=  → GitHub Secret
# HMS_UAT_TOKEN=  → GitHub Secret
# HMS_PROD_TOKEN= → GitHub Secret

# ─── Database (Railway provides DATABASE_URL automatically) ───
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/hospital_db
SPRING_DATASOURCE_USERNAME=hospital_user
SPRING_DATASOURCE_PASSWORD=hospital_pass

# ─── JWT Security ───
APP_JWTSECRET=change-me-to-a-256-bit-secret
APP_JWTEXPIRATION_MS=86400000

# ─── Bootstrap (first admin signup) ───
APP_BOOTSTRAP_TOKEN=change-me

# ─── Spring Profile ───
SPRING_PROFILES_ACTIVE=dev

# ─── Port (Railway sets this automatically) ───
PORT=8081

# ─── AWS S3 (optional) ───
AWS_S3_ACCESSKEY=
AWS_S3_SECRETKEY=
AWS_S3_BUCKETNAME=

# ─── Mail (optional) ───
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=
SPRING_MAIL_PASSWORD=
