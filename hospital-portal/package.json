{
  "name": "hospital-portal",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:headless": "ng test --watch=false --browsers=ChromeHeadless",
    "test:ci": "CI=1 ng test --watch=false --code-coverage",
    "e2e": "playwright test",
    "lint": "eslint \"src/**/*.{ts,html}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier \"src/**/*.{ts,html,scss,md,json}\" --write",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,md,json}\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "overrides": {
    "body-parser": "2.2.1",
    "tar": "7.5.7",
    "qs": "6.14.1"
  },
  "dependencies": {
    "@angular/animations": "20.3.16",
    "@angular/cdk": "20.2.10",
    "@angular/common": "20.3.16",
    "@angular/compiler": "20.3.16",
    "@angular/core": "20.3.16",
    "@angular/forms": "20.3.16",
    "@angular/material": "20.2.10",
    "@angular/platform-browser": "20.3.16",
    "@angular/platform-browser-dynamic": "^20.3.16",
    "@angular/platform-server": "20.3.16",
    "@angular/router": "20.3.16",
    "@angular/ssr": "20.3.12",
    "@ngx-translate/core": "17.0.0",
    "@ngx-translate/http-loader": "17.0.0",
    "@stomp/stompjs": "7.1.1",
    "express": "5.1.0",
    "rxjs": "7.8.2",
    "sockjs-client": "1.6.1",
    "tslib": "2.8.1",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular/build": "20.3.12",
    "@angular/cli": "20.3.16",
    "@angular/compiler-cli": "20.3.16",
    "@playwright/test": "1.56.1",
    "@types/express": "5.0.3",
    "@types/jasmine": "5.1.9",
    "@types/node": "20.19.11",
    "angular-eslint": "20.3.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "9.1.2",
    "jasmine-core": "5.9.0",
    "jspdf": "4.1.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "prettier": "3.6.2",
    "puppeteer": "24.17.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0"
  }
}
